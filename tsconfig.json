{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2015",
      "dom"
    ],
    "declaration": true,
    "outDir": "./lib/types",
    "sourceMap": false,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "types": ["node"]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules",
    "./tests/**/*.ts"
  ]
}